on post-fs-data && \
    property:ro.hardware.security.trusty_vm.system.nonsecure=1
    mkdir /data/system 0770 root system
    mkdir /data/system/ss 0770 root system
    symlink /mnt/system/persist/ss /data/system/ss/persist
    chown root system /data/system/ss/persist
    chmod 0770 /data/system/ss/persist
    # Advertise "data ready" to Secure Storage
    setprop ro.hardware.security.secure_storage.data_rdy 1
    trigger hardware_security_secure_storage_data_rdy
