package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

rust_defaults {
    name: "libhwcrypto_defaults",
    edition: "2021",
    lints: "android",
    rustlibs: [
        "android.hardware.security.see-rust",
        "libciborium",
        "libcoset",
        "libbinder_rs",
        "libkmr_common",
        "libkmr_crypto_boring",
        "libkmr_wire",
        "libzeroize",
    ],
}

rust_library_host {
    name: "libhwcryptocommon",
    crate_name: "hwcryptocommon",
    srcs: [
        "src/common/lib.rs"
    ],
    defaults: [
        "libhwcrypto_defaults",
    ],
}

rust_library_host {
    name: "libhwcryptoserver",
    crate_name: "hwcryptoserver",
    srcs: [
        "src/server/lib.rs"
    ],
    defaults: [
        "libhwcrypto_defaults",
    ],
    rustlibs: [
        "libhwcryptocommon",
    ],
}

rust_test_host {
    name: "libhwcryptoserver_test",
    crate_name: "hwcryptoserver_test",
    srcs: ["src/server/lib.rs"],
    defaults: [
        "libhwcrypto_defaults",
    ],
    rustlibs: [
        "libhwcryptocommon",
    ],
    test_suites: ["general-tests"],
}

rust_library_host {
    name: "libhwcryptoclient",
    crate_name: "hwcryptoclient",
    srcs: [
        "src/client/lib.rs"
    ],
    defaults: [
        "libhwcrypto_defaults",
    ],
    rustlibs: [
        "libhwcryptocommon",
    ],
}

rust_test_host {
    name: "libhwcryptoclient_test",
    crate_name: "hwcryptoclient_test",
    srcs: ["src/client/lib.rs"],
    defaults: [
        "libhwcrypto_defaults",
    ],
    rustlibs: [
        "libhwcryptocommon",
    ],
    test_suites: ["general-tests"],
}

