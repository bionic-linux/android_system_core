package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

cc_library {
    name: "libtrusty_busy_test",
    vendor: true,
    srcs: [
        "busy_test_client.c",
    ],
    export_include_dirs: [
        "include",
    ],
    shared_libs: [
        "libbase",
        "liblog",
        "libtrusty",
    ],
}

cc_binary {
    name: "trusty-busy-ctrl",
    vendor: true,
    srcs: ["busy_test_ctrl.cpp"],
    shared_libs: [
        "libc",
        "liblog",
        "libjsoncpp",
    ],
    static_libs: [
        "libtrusty",
        "libtrusty_busy_test",
    ],
    cflags: [
        "-Wall",
        "-Werror",
    ],
}

cc_test {
    name: "trusty-qos-test",
    vendor: true,
    srcs: [
        "qos_test.cpp",
    ],
    local_include_dirs: [
        "include",
    ],
    static_libs: [
        "libtrusty_busy_test",
        "libgmock",
    ],
    shared_libs: [
        "libbase",
        "liblog",
        "libtrusty",
        "libutils",
    ],
    cflags: [
        "-Wall",
        "-Werror",
    ],
    require_root: true,
    proprietary: true,
}
