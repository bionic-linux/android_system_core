#!/usr/bin/bash

# STEPS=1000000
# COUNT=10

STEPS=123456
COUNT=2

CMD=$(basename $0)

usage()
{
	echo "usage: $CMD [x64 | arm64]" 1>&2
	exit 1
}

if [ $# -ne 1 ] ; then
	usage
fi

ARCH="$1"

if [ "$ARCH" != x64 -a "$ARCH" != arm64 ] ; then
	usage
fi

PROG=./gen/test-lwt-mp-BITS-O3-g-$ARCH
# PROG=./gen/test-lwt-mp-smt-BITS-O3-g-$ARCH


while read START END ; do
	ATTEMPTS=$START
	while [ $ATTEMPTS -le $END ] ; do
		C=0
		while [ $C -lt $COUNT ] ; do
			echo $ATTEMPTS: $(/bin/time $PROG $STEPS $ATTEMPTS 2>&1)
			C=$[ C + 1 ]
		done
		ATTEMPTS=$[ ATTEMPTS + 10 ]
	done
done <<LIST
0 1000
LIST

C=0
while [ $C -lt $COUNT ] ; do
	echo pthreads: $(/bin/time ./gen/test-pthread-O3-g-$ARCH $STEPS 2>&1)
	C=$[ C + 1 ]
done
