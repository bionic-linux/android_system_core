cc_fuzz {
    name: "libsnapshot_cow_fuzzer",
    host_supported: true,
    srcs: [
        "libsnapshot_cow_fuzzer.cpp",
    ],
    include_dirs: [
        "system/core/fs_mgr/libsnapshot/libsnapshot_cow",
    ],
    static_libs:[
        "libsnapshot_cow",
        "libbrotli",
        "libz",
        "liblz4",
        "libzstd",
    ],
    shared_libs: [
        "libbase",
        "liblog",
        "libutils",
    ],
    fuzz_config: {
        cc: [
            "android-media-fuzzing-reports@google.com",
        ],
        componentid: 59148,
        hotlists: ["4593311"],
        description: "The fuzzers target the APIs of libsnapshot_cow",
        vector: "local_no_privileges_required",
        service_privilege: "privileged",
        users: "multi_user",
        fuzzed_code_usage: "shipped"
    },
}
